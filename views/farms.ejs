<%- include('partials/header.ejs') %>

    <div class="container">
        <header>
            <div class="header-row">
                <span> <a href="/home"><img src="/img/icons/chevron-left_icon.svg" alt=""></a></span>

                <p>Selecione a farm√°cia</p>

                <span></span>
            </div>
        </header>

        <main>
            <div class="reserved-medicines">
                <% if(farms.length===1){ %>
                    <div class="medicine">
                        <p>
                            <%= farms[0].name %>
                        </p>
                        <p>
                            <%= farms[0].preco %>
                        </p>
                    </div>
                    <% } else{ %>
                        <% farms.forEach(farm=> { %>
                            <div class="medicine">
                                <p>
                                    <%= farm.name %>
                                </p>
                                <p>
                                    <%= farm.preco %>
                                </p>
                            </div>
                            <% })} %>
            </div>
        </main>

        <%- include('partials/nav_bottom.ejs') %>
    </div>

    <%- include('partials/footer.ejs') %>